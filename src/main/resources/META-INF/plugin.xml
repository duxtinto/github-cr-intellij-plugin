<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <id>main.com.duxtinto.intellij.plugin.github.codereviews</id>
    <name>Github Code Review Plugin</name>
    <version>1.0</version>

    <description><![CDATA[
      GitHub code review integration into intellij platform
    ]]></description>

    <change-notes><![CDATA[
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <depends>org.jetbrains.plugins.github</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="GitHub Reviews"
                anchor="bottom"
                factoryClass="com.duxtinto.intellij.plugin.github.codereviews.ui.toolwindow.ToolWindowFactory"
        />
    </extensions>

    <actions>
    </actions>

    <application-components>
        <component>
            <implementation-class>com.duxtinto.intellij.plugin.github.codereviews.ide.integration.ApplicationDIComponent</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>com.duxtinto.intellij.plugin.github.codereviews.ide.integration.ProjectDIComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>