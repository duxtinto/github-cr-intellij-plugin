<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <id>main.com.duxtinto.intellij.plugin.github.codereviews</id>
    <name>Github Code Review Plugin</name>
    <version>1.0</version>

    <description><![CDATA[
      GitHub code review integration into intellij platform
    ]]></description>

    <change-notes><![CDATA[
    ]]>
    </change-notes>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.github</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="GitHub Reviews"
                anchor="bottom"
                factoryClass="com.duxtinto.intellij.plugin.github.codereviews.presentation.toolwindow.ToolWindowFactory"
        />
    </extensions>

    <actions>
    </actions>

    <application-components>
        <component>
            <implementation-class>com.duxtinto.intellij.plugin.github.codereviews.ide.integration.ApplicationDIComponent</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>com.duxtinto.intellij.plugin.github.codereviews.ide.integration.ProjectDIComponent</implementation-class>
        </component>
    </project-components>
</idea-plugin>